<?xml version="1.0"?>
<config>
    <modules>
        <Sezzle_Pay>
            <version>2.0.4</version>
        </Sezzle_Pay>
    </modules>
    <global>
        <blocks>
            <sezzle_pay>
                <class>Sezzle_Pay_Block</class>
            </sezzle_pay>
        </blocks>
        <models>
            <sezzle_pay>
                <class>Sezzle_Pay_Model</class>
            </sezzle_pay>
        </models>
        <helpers>
            <sezzle_pay>
                <class>Sezzle_Pay_Helper</class>
            </sezzle_pay>
        </helpers>
        <fieldsets>
            <sales_convert_quote_payment>
                <sezzle_reference_id>
                    <to_order_payment>*</to_order_payment>
                </sezzle_reference_id>
            </sales_convert_quote_payment>
        </fieldsets>
        <resources>
            <sezzlepay_setup>
                <setup>
                    <module>Sezzle_Pay</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
            </sezzlepay_setup>
        </resources>
    </global>
    <default>
        <payment>
            <pay>
                <title>Sezzle Pay PayLater 0% Interest</title>
                <active>1</active>
                <model>sezzle_pay/PaymentMethod</model>
                <order_status>processing</order_status>
                <payment_action>authorize_capture</payment_action>
            </pay>
        </payment>
    </default>
    <frontend>
        <layout>
            <updates>
                <pay>
                    <file>sezzle_pay.xml</file>
                </pay>
            </updates>
        </layout>
        <routers>
            <pay>
                <use>standard</use>
                <args>
                    <module>Sezzle_Pay</module>
                    <frontName>pay</frontName>
                </args>
            </pay>
        </routers>
    </frontend>
    <crontab>
        <jobs>
            <sezzle_pay_daily_send>
                <schedule><cron_expr>* * * * *</cron_expr></schedule>
                <run><model>sezzle_pay/observer::sendDailyData</model></run>
            </sezzle_pay_daily_send>
        </jobs>
    </crontab>
</config> 